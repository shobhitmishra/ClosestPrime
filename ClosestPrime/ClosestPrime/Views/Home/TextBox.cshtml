@model NumberInput
@using (Html.BeginForm("Checknumber", "Home"))
{
    <div class="text-center">
        <p>Enter a number far from a prime.</p>
        <div asp-validation-summary="All" , class="text-danger"></div>
        @Html.TextBoxFor(x => x.Input)
        <div>
            <input type="submit" />
        </div>
    </div>
}